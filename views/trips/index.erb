<ul class="trip-list">
  <% for list_item in @trips %>
  <li class="list-item">
    <%=list_item.sight.name%>
    <%if list_item.visited == 't'%>
    <i class="far fa-check-square"></i><a href="/<%= list_item.id %>/trips-toggle">&nbspTick it off!</a>
      <% else %>
    <i class="far fa-clock"></i><a href="/<%= list_item.id %>/trips-toggle"> &nbspAdventure awaits!</a>

  <%end%>

  <div class="medium-text">
      <i class="fas fa-edit"></i>
        <button type="button">
          <a href="/trips/<%= list_item.id %>/edit">Edit</a>
          </button>
            <i class="fas fa-trash-alt"></i>
              <form class="" action="/trips/<%= list_item.id %>" method="post">
                <input type="hidden" name="_method" value="delete">
          <button type="submit">Delete</button>
      </form>
      </div>
    </li>
  <% end %>
</ul>
