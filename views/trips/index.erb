<ul class="trip-list">
  <% for list_item in @trips %>
  <li class="list-item">
    <%=list_item.sight.name%>
    <%if list_item.visited == 't'%>
    <i class="far fa-check-square"></i>  Tick another one off!
  <% else %>
    <i class="far fa-clock"></i>  This adventure is yet to come!
  <%end%>
  <div class="medium-text">
    <i class="fas fa-trash-alt"></i>
    <form class="" action="/trips/<%= list_item.id %>" method="post">
      <input type="hidden" name="_method" value="delete">
      <button type="submit">
        Delete trip
      </button>
    </form>


    <i class="fas fa-edit"></i>
    <button type="button">
      <a href="/trips/<%= list_item.id %>/edit">Edit trip</a>
    </button>
  </div>
  </li>
  <% end %>
</ul>
