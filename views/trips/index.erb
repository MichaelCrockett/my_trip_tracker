<ul class="trip-list">
  <% for list_item in @trips %>
  <li class="list-item">
    <%=list_item.sight.name%>
    <%if list_item.visited == 't'%>
    |  Tick another one off!
  <% else %>
    |  This adventure is yet to come!
  <%end%>
  <div class="medium-text">
    <i class="fas fa-trash-alt"></i>  Delete
    <i class="fas fa-edit"></i>  Edit
  </div>
  </li>
  <% end %>
</ul>
